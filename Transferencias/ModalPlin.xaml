<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Transferencias.ModalPlin">
    <Grid RowDefinitions="*,100" BackgroundColor="#631F7C">
        <StackLayout Grid.Row="0" Margin="10,30,10,30">
            <Label Text="Número:" TextColor="White"/>
            <Frame CornerRadius="10" BackgroundColor="#F6F4FB" Padding="10" Margin="0">
                <Entry x:Name="numero_input" TextColor="Black"/>
            </Frame>
            <Label Text="Monto:" TextColor="White"/>
            <Frame CornerRadius="10" BackgroundColor="#F6F4FB" Padding="10" Margin="0">
                <Entry x:Name="monto_input" TextColor="Black"/>
            </Frame>
        </StackLayout>
        <Frame Grid.Row="1">
            <FlexLayout>
                <Button Text="Cancelar" x:Name="btn_model_cancelar"  Clicked="btn_model_cancelar_Clicked"/>
                <Button Text="Plinear" x:Name="btn_model_plin" Clicked="btn_model_plin_Clicked"/>
            </FlexLayout>
        </Frame>
    </Grid>
</ContentPage>